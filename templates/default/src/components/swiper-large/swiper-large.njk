	<div class="swiper-large ">
		<div class="swiper-large__top popup__images-main">
			<div class="swiper-container" data-swiper-large>
				<div class="swiper-wrapper">
					{% for item in [1, 2, 3, 4, 5, 6] %}
					<div class="swiper-slide">
						<div class="swiper-large__item swiper-large__item_large">
							<img data-src="images/swiper.png" src="images/swiper.png" alt=""
								class="swiper-large__pic swiper-large__pic_big lazyload" />
							<a href="#" class="popup__images-link">
								Изменить заглавное фото
							</a>
						</div>
						<!-- /.swiper-large__item swiper-large__item_large -->
					</div>
					<!-- /.swiper-slide -->
					{% endfor %}
				</div>
				<!-- /.swiper-wrapper -->
			</div>
			<!-- /.swiper-container -->
		</div>
		<!-- /.swiper-large__top -->
		<div class="swiper-large__bottom">
			<div class="swiper-container" data-swiper-large-thumb
				data-options='{ "slidesPerView": 4,"spaceBetween": 14 , "watchSlidesVisibility": true, "watchSlidesProgress": true }'>
				<div class="swiper-wrapper">
					{% for item in [1, 2, 3, 4, 5, 6] %}
					<div class="swiper-slide">
						<div class="swiper-large__item swiper-large__item_small popup__images-item">
							<img data-src="images/swiper.png" src="images/swiper.png" alt=""
								class="swiper-large__pic swiper-large__pic_small lazyload" />
							<div class="popup__images-delete"></div>
						</div>
						<!-- /.swiper-large__item swiper-large__item_small -->
					</div>
					<!-- /.swiper-slide -->
					{% endfor %}
				</div>
				<!-- /.swiper-wrapper -->
			</div>
			<!-- /.swiper-container -->

		</div>
		<!-- /.swiper-large__bottom -->
	</div>
	<!-- /.swiper-large -->
